<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAE7DC"
        tools:context=".mydiscount">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/mydiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D8C3A5"
            android:text="我的優惠券"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.103"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/discount1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mydiscount"
            app:layout_constraintVertical_bias="0.025" />

        <Button
            android:id="@+id/shipdiscount_details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳情"
            app:layout_constraintBottom_toBottomOf="@+id/discount1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toEndOf="@+id/discount1"
            app:layout_constraintTop_toTopOf="@+id/discount1" />

        <ImageView
            android:id="@+id/discount2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount1"
            app:layout_constraintVertical_bias="0.025" />

        <Button
            android:id="@+id/details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳情"
            app:layout_constraintBottom_toBottomOf="@+id/discount2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toEndOf="@+id/discount2"
            app:layout_constraintTop_toTopOf="@+id/discount2" />

        <ImageView
            android:id="@+id/discount3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount2"
            app:layout_constraintVertical_bias="0.025" />

        <Button
            android:id="@+id/details3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳情"
            app:layout_constraintBottom_toBottomOf="@+id/discount3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toEndOf="@+id/discount3"
            app:layout_constraintTop_toTopOf="@+id/discount3" />

        <ImageView
            android:id="@+id/discount4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount3"
            app:layout_constraintVertical_bias="0.025" />

        <Button
            android:id="@+id/details4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳情"
            app:layout_constraintBottom_toBottomOf="@+id/discount4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toEndOf="@+id/discount4"
            app:layout_constraintTop_toTopOf="@+id/discount4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>